<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.hamsh5312.solution.Wpost.dao.W_PostDAO">
 
 	<insert id="insertWPost" parameterType="map">
 	
 		INSERT INTO `w_post`
 		(
 			`userId`
 			, `userName`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `sBox`
 			, `createdAt`
 			, `updatedAt`
 		) VALUES(
 		
	 		#{userId}
	 		, #{userName}
	 		, #{subject}
	 		, #{content}
	 		, #{imagePath}
	 		, #{sBox}
	 		, now()
	 		, now()
 		
 		)
 	</insert>
 
 	<select id="selectPostList" resultType="com.hamsh5312.solution.Wpost.model.W_Post">
 	
 		SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `sBox`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`w_post`
		ORDER BY `id` DESC
		
 	</select>
 
 	<select id="selectWorryPost" resultType="com.hamsh5312.solution.Wpost.model.W_Post"
 	parameterType="map">
 	
 	SELECT
 			`id`
 			, `userId`
 			, `userName`
 			, `subject`
 			, `content`
 			, `imagePath`
 			, `sBox`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`w_post`
 		WHERE 
 			`id` = #{id}
 	</select>
 
 </mapper>